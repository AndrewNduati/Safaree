<% provide(:title, "New Tour") %>
<div class="wrapper container">
  <div class="row">
  	<div class="col-md-2">
		<span> </span>
	</div>
    <div class="col-md-10">
		<h1>Creating a New Tour</h1>
	</div>
	<!-- <div class="col-md-2">
		<span> </span>
	</div> -->
	</div>

	<div class="row">
		
		<div class="col-md-2">
			<span> </span>
		</div>

		<div class="col-md-8">
			
			<%= form_for :tour, url: insider_tours_path do |f| %>
			
			<p>
				<%= f.label :tourist %><br>
			    <%= f.text_field :tourist_id,  class: 'form-control' %><br>
			    <%= f.label :insider %><br>
			    <%= f.text_field :insider_id,  class: 'form-control' %><br>
			    <%= f.label :activities %><br>
			    <%= f.text_field :activities,  class: 'form-control' %><br>
			    <%= f.label :rating %><br>
			    <%= f.number_field(:rating, in: 1.0..20.0, step: 0.5,  class: 'form-control') %><br>
			   
			</p>
			<p>
				<%= f.submit "Create Tour",class: 'btn btn-primary' %>
			</p>

			<% end %>
		</div>

		<div class="col-md-2">
			<span> </span>
		</div> 
	</div>
</div>